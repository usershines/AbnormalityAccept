<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.abnormality.abnormalityaccept.mapper.NoticeMapper">

    <resultMap id="Base_Notice_List" type="com.abnormality.abnormalityaccept.entity.Notice">
        <id property="id" column="id"/>
        <result property="content" column="content"/>
        <result property="time" column="time"/>
        <result property="state" column="state"/>
    </resultMap>

    <sql id="Base_Notice">
        id, content, time ,state
    </sql>

    <select id="findAllNotice" resultMap="Base_Notice_List">
        SELECT
        <include refid="Base_Notice"/>
        FROM notice
        where state != 0
    </select>

    <select id="findNoticeById" resultMap="Base_Notice_List">
        SELECT
        <include refid="Base_Notice"/>
        FROM notice
        WHERE id = #{id}
    </select>

    <insert id="addNotice">
        INSERT INTO mails(id, content, time, state)
        VALUES(#{id}, #{content}, #{time}, #{state})
    </insert>

    <update id="updateNotice">
        UPDATE notice
        SET id = #{id},
            content = #{content},
            time = #{time},
            state = #{state},
        WHERE id = #{id}
    </update>

    <delete id="deleteNoticeById">
        DELETE FROM notice
        WHERE id = #{id}
    </delete>

    <select id="findNoticeByCondition" resultMap="Base_Notice_List">
        SELECT
        <include refid="Base_Notice"/>
        FROM notice
        <where>
            <if test="state != null and state != ''">
                AND state LIKE CONCAT('%', #{state}, '%')
            </if>
            <if test="id !=null''">
                and id like concat('%',#{id},'%')
            </if>
            <if test="content !=null and content !=''">
                and content like concat ('%',#{content},'%')
            </if>
            <if test="time != null and time !=''">
                and time like concat('%',#{time},'%')
            </if>

        </where>
    </select>
</mapper>