<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.abnormality.abnormalityaccept.mapper.FacilityMapper">
    <resultMap id="Base_Facility_List" type="com.abnormality.abnormalityaccept.entity.Facility">
        <id property="id" column="id"/>
        <result property="level" column="level"/>
        <result property="leaderId" column="leader_id"/>
        <result property="facilityName" column="facility_name"/>
        <result property="facilityAddress" column="facility_address"/>
    </resultMap>

    <sql id="Base_Facility">
        id, level,,leader_id, facility_name, facility_address
    </sql>

    <select id="findAllFacility" resultMap="Base_Facility_List">
        SELECT
        <include refid="Base_Facility"/>
        FROM facility
    </select>

    <select id="findFacilityById" resultMap="Base_Facility_List">
        SELECT
        <include refid="Base_Facility"/>
        FROM facility
        WHERE id = #{id}
    </select>

    <insert id="addFacility">
        INSERT INTO facility(id, level,leader_id,facility_name, facility_address)
        VALUES(#{id}, #{level}, #{leaderId},#{facilityName}, #{facilityAddress})
    </insert>

    <update id="updateFacility">
        UPDATE facility
        SET id = #{name},
            level = #{level},
            leader_id = #{leaderId}
            facility_name = #{facilityName}
            facility_address = #{facilityAddress}
        WHERE id = #{id}
    </update>

    <delete id="deleteFacilityById">
        DELETE FROM facility
        WHERE id = #{id}
    </delete>

    <select id="findFacilityByCondition" resultMap="Base_Facility_List">
        SELECT
        <include refid="Base_Facility"/>
        FROM facilities
        <where>
            <if test="facilityName != null and facilityName != ''">
                AND name LIKE CONCAT('%', #{facilityName}, '%')
            </if>
        </where>
    </select>
    <!-- 6. 按等级查询设施 -->
    <select id="findByLevel" resultType="com.abnormality.abnormalityaccept.entity.Facility">
        SELECT <include refid="Base_Facility"/> FROM facility
        WHERE level = #{level}

    </select>
    <!-- 10. 模糊查询（按设施名称或地址） -->
    <select id="searchByKeyword" resultType="com.abnormality.abnormalityaccept.entity.Facility">
        SELECT <include refid="Base_Facility"/> FROM facility
        WHERE facility_name LIKE CONCAT('%', #{facilityName}, '%')
        OR facility_address LIKE CONCAT('%', #{facilityName}, '%')
    </select>

</mapper>