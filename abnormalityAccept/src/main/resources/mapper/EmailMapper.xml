<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.abnormality.abnormalityaccept.mapper.EmailMapper">
    <resultMap id="Email_Base_Data" type="com.abnormality.abnormalityaccept.entity.Email">
        <id property="id" column="id" />
        <result property="state" column="state" />
        <result property="senderId" column="sender_id" />
        <result property="receiverId" column="receiver_id" />
        <result property="theme" column="theme" />
        <result property="content" column="content" />
        <result property="sendTime" column="send_time" />
    </resultMap>
    <sql id="Base_Column_List">
        id, state, sender_id, receiver_id, theme, content, send_time
    </sql>
    <select id="findAllEmail" resultMap="Email_Base_Data">
        SELECT
        <include refid="Base_Column_List" />
        FROM email
    </select>
    <select id="findEmailBySenderId" resultMap="Email_Base_Data">
        SELECT
        <include refid="Base_Column_List" />
        FROM email
        WHERE sender_id = #{senderId}
    </select>
    <select id="findEmailById" resultMap="Email_Base_Data">
        SELECT
        <include refid="Base_Column_List" />
        FROM email
        WHERE id = #{id}
    </select>
    <insert id="addEmail" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO email(state, sender_id, receiver_id, theme, content, send_time) VALUES (#{state}, #{senderId}, #{receiverId}, #{theme}, #{content}, #{sendTime})
    </insert>
    <update id="updateEmail">
        UPDATE email
        SET state = #{state}, sender_id = #{senderId}, receiver_id = #{receiverId}, theme = #{theme}, content = #{content}, send_time = #{sendTime}
        WHERE id = #{id}
    </update>
    <delete id="deleteEmailById">
        DELETE FROM email WHERE id = #{id}
    </delete>


</mapper>